<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_memoir_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_memoir_moviename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Movie Name"/>

    <TextView
        android:id="@+id/tv_memoir_releaseyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Release year"/>

    <TextView
        android:id="@+id/tv_memoir_releasedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Release date"/>

    <TextView
        android:id="@+id/tv_memoir_datetimewatched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Date &amp; time watched"/>

    <TextView
        android:id="@+id/tv_memoir_cinemasuburb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Cinema suburb"/>

    <TextView
        android:id="@+id/tv_memoir_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Comment"/>

<!--    <RatingBar
        android:id="@+id/rb_memoir_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="0.1"
        android:isIndicator="true"
        android:layout_marginBottom="10dp"/>-->


    <TextView
        android:id="@+id/tv_memoir_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Rating Score"/>

    <TextView
        android:id="@+id/tv_memoir_publicRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Public Rating Score"/>


    <TextView
        android:id="@+id/tv_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Click here for more details"
        android:paddingTop="10dp"/>

</LinearLayout>